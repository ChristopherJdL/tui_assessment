<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>FlightMaster</title>
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"
			  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
			  crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.deep_purple-blue.min.css" />
  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  <script src="js/flightOperations.js"></script>
  <script src="js/dialogPolyfill.js"></script>
  <!--[if lte IE 10]>
  <link rel="stylesheet" href="css/dialogPolyfill.css"></script>
  <link rel="stylesheet" href="css/dialogPolyfill.css"></script>
  <![endif]-->
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
  <!-- Always shows a header, even in smaller screens. -->
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title"><a style="text-decoration: none;color: white;" href="/">🛫 FlightMaster</a></span>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>
      <!-- Navigation. We hide it in small screens. -->
      <nav class="mdl-navigation mdl-layout--large-screen-only">
        <a class="mdl-navigation__link" href="/">🛩️ Manage Flights</a>
        <a class="mdl-navigation__link" href="/Report">💪 Detailed Report</a>
      </nav>
    </div>
  </header>
  <div class="mdl-layout__drawer">
    <span class="mdl-layout-title">🛫 FlightMaster</span>
    <nav class="mdl-navigation">
      <a class="mdl-navigation__link" href="/">🛩️ Manage Flights</a>
      <a class="mdl-navigation__link" href="/Report">💪 Detailed Report</a>
    </nav>
  </div>
  <main class="mdl-layout__content">
    <div class="page-content">
  @RenderBody()
  
</div>
    </div>
  </main>
</body>
</html>